<?xml version="1.0" encoding="UTF-8"?>
<sequence name="templatePSA_7_2" xmlns="http://ws.apache.org/ns/synapse">
    <payloadFactory media-type="json" template-type="default">
        <format> {
                    "messages": [
                        {
                            "from": "$1",
                            "to": "$2",
                            "content": {
                                "templateName": "$3",
                                "templateData": {
                                    "body": {
                                        "placeholders": $4
                                    }
                                },
                                "language": "en"
                            },
                            "callbackData": "Callback data infobip to kraft",
                            "notifyUrl": "$6"
                        }
                    ]
                }
        </format>
        <args>
            <arg expression="get-property('from')" />
            <arg expression="get-property('send_to')" />
            <arg expression="get-property('templateName')" />
            <arg expression="get-property('placeholders')" />
            <arg evaluator="xml" expression="get-property('notifyUrl')" />
        </args>
    </payloadFactory>
    <property name="infobipPayload" expression="json-eval($.)" scope="default" />
</sequence>
